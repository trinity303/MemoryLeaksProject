<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.memory.leaks.project"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".MemoryLeaksApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MemoryLeaksProject"
        >
        <activity
            android:name=".main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MemoryLeaksProject.NoActionBar"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".details.DetailsActivity"/>

        <activity android:name=".sender.presentation.DetailsSenderActivity"/>
    </application>

</manifest>